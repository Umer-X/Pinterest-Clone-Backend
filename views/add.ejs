<% include ./partials/header.ejs %>

 <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-4xl ml-40 italic">Create a New Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input type="file" name="postimage" class="block w-1/3 px-3 py-2">
        <input type="text" class="block w-1/3 px-3 py-2 text-black border-2 mt-2 rounded-md" placeholder="Tittle" name="tittle">
        <textarea class="block w-1/3 h-60 px-3 py-2 mt-2 text-black rounded-md" type="text" placeholder="Description" name="description" ></textarea>
        <input type="submit" class="block w-1/8 px-3 py-2 mt-2 bg-red-700 rounded-md" value="Create Post">
    </form>
 </div>








